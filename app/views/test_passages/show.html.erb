<h5><%= @test_passage.test.title %></h5>

<%= question_number(@test_passage.current_question)%>

<p><%= @test_passage.current_question.body %></p>

<div>
  <%= form_with url: test_passage_path(@test_passage), local: true, method: :put do | form | %> <%= form.collection_check_boxes :answer_ids,
  @test_passage.current_question.answers, :id, :body, include_hidden: false do |b|%>
  <p><%= b.check_box id: "answer_ids_#{b.object.id}" %> <%= b.label %></p>
  <% end %> <%= form.submit t('.next') %> <% end %>

  <p><%= link_to 'Gist Question', admin_gists_path(test_passage:@test_passage.id), method: :post %></p>
</div>
