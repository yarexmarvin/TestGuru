<h1><%= t('.header')%></h1>

<% if @badges.empty? %>

<p><%= t('.no_badges')%></p>

<% else %>
  <table class="table align-center">
    <thead>
      <tr>
        <th><%= t('.sticker')%></th>
        <th><%= t('.title')%></th>
      </tr>
    </thead>
    <tbody>
      <%= render @badges %>
    </tbody>
  </table>

<% end %>
