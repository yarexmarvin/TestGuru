<%= form_with model: [:admin, @test], local: true do |form| %>
  <%= render 'shared/errors', resource: @test %>
  <div class="card border-primary">
    <div class="card-body">
      <p>
        <%= form.label :title %>
        <%= form.text_field :title, id: :test_title, class: 'form-control' %>
      </p>
    
      <p>
        <%= form.label :level %>
        <%= form.number_field :level, id: :test_level, class: 'form-control' %>
      </p>
    
      <p>
        <%= form.label :category_id %>
        <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true, class: 'form-select' %>
      </p>
      
      <p>
        <%= form.label :timer %>:
        <%= form.text_field :timer, id: :test_timer %>
      </p>
      
      <p>
        <%= form.submit class: 'btn btn-primary btn-sm' %>
      </p>
    </div>
  </div>
<% end %>
