<h1><%= t('.header')%></h1>

<% if current_user.admin? %>
  <%= link_to t('.create_badges'), new_admin_badge_path, class: 'btn btn-info' %>
<%end%>

<table class="table align-center">
  <thead>
    <tr>
      <th><%= t('.sticker')%></th>
      <th><%= t('.title')%></th>
      <% if current_user.admin? %>
      <th colspan="3"><%= t('.actions')%></th>
      <%end%>
    </tr>
  </thead>
  <tbody>
    <%= render @badges %>
  </tbody>
</table>
